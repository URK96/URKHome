<BFUTooltipHost>
    <TooltipContent>
        <BFULabel Style="text-align:center">@Tooltip</BFULabel>
    </TooltipContent>
    <ChildContent>
        <img src="@Image" width="@ImageWidth" />
    </ChildContent>
</BFUTooltipHost>

@code
{
    [Inject]
    ThemeProvider ThemeProvider { get; set; }

    [Parameter]
    public string Image { get; set; }
    [Parameter]
    public string Tooltip { get; set; }
    [Parameter]
    public int ImageWidth { get; set; }
}